@layout(false)
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ManaPHP User</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/element-ui@2.15.6/lib/theme-chalk/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <style>
        .login-box {
            margin: 10% auto;
            width: 270px;
        }

        .login-box > div {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
<script>var BASE_URL = '{{base_url()}}';</script>
<div id="app" class="login-box">
    <h1 align="center">找回密码</h1>
    <el-input v-model.trim="request.user_name" placeholder="用户名" autofocus>
        <template slot="prepend">账号</template>
    </el-input>
    <el-input v-model.trim="request.email" placeholder="邮箱">
        <template slot="prepend">邮箱</template>
    </el-input>
    <el-row>
        <el-col :span="16">
            <el-input v-model.trim="request.code" placeholder="验证码">
                <template slot="prepend">验证码</template>
            </el-input>
        </el-col>
        <el-col :offset="1" :span="7">
            <img :src="BASE_URL+'/user/password/captcha?t='+captcha_timestamp"
                 @click="request.code=''; captcha_timestamp=Date.now()">
        </el-col>
    </el-row>
    <el-button @click="login" style="width:100%" type="primary">找回</el-button>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/element-ui@2.15.6/lib/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@0.18.0/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/qs@6.7.0/dist/qs.js"></script>
<script>
    Vue.prototype.$axios = axios;

    axios.defaults.headers.common['X-Requested-With'] = 'XMLHttpRequest';

    vm = new Vue({
        el: '#app',
        data: {
            request: {
                user_name: '',
                email: '',
                code: ''
            },
            captcha_timestamp: Date.now()
        },
        methods: {
            login() {
                this.$axios.post(document.location.href, Qs.stringify(this.request)).then((res) => {
                    if (res.data.code === 0) {
                        window.location.href = "{{$redirect}}";
                    } else {
                        this.request.code = '';
                        this.captcha_timestamp = Date.now();
                        this.$alert(res.data.message);
                    }
                }).catch((error) => {
                    this.captcha_timestamp = Date.now();

                    if (error.response.data.message) {
                        this.$alert(error.response.data.message, '失败');
                    } else {
                        this.$alert(error.response.statusText, '失败');
                    }
                });
            },
        }
    });
</script>
</body>
</html>
